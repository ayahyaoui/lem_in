NAME = libft.a 

FIC =	ft_power2 ft_itoa_base ft_itoa_base2 ft_strrev ft_swap ft_isspace\
		ft_itoa_base ft_strcjoin ft_strmerge ft_affichetab ft_lennbr_base\
		ft_putchar_fd ft_putstr_fd ft_putendl_fd ft_putendl ft_putnbr_fd\
		ft_striter ft_lstiter ft_lstrev ft_printbit ft_lstrev ft_realloc\
		ft_strncpy ft_strnstr ft_strrchr ft_strstr ft_isalnum ft_strdel\
		ft_striteri ft_strmap ft_strmapi ft_strequ ft_strnequ ft_strsub\
		ft_strjoin  ft_strtrim ft_strsplit ft_itoa ft_putchar ft_putstr\
		ft_sortinttab ft_printbase ft_abs ft_isupper ft_islower ft_min\
		ft_strdup ft_strlcat ft_strlen ft_strncat ft_strncmp ft_strnew\
		ft_putnbr ft_lstnew ft_isalpha  ft_lstdel ft_lstmap ft_lstadd\
		ft_max ft_isinteger ft_issort ft_atol ft_tri_fusion_iterative\
		ft_isascii ft_isascii ft_isdigit ft_isprint ft_strclr ft_div\
		ft_memset ft_memcmp ft_strcat ft_strcmp ft_strchr ft_strcpy\
		ft_atoi ft_bzero ft_memccpy ft_memchr ft_memcpy ft_memmove\
		ft_printbit ft_printbit_rev ft_printnbit ft_printnbit_rev\
		ft_tolower ft_toupper ft_memalloc ft_memdel ft_lstdelone\
		ft_tri_fusion_recursive

FLAGS = -I -Wall -Wextra -Werror

OBJ=$(addsuffix .o,$(FIC))

SRC=$(addsuffix .c,$(FIC))

all:  $(NAME)

$(NAME):$(OBJ)
	ar rc libft.a $(OBJ)

%.o : %.c
	gcc  $(FLAGS) -c $< -o $@

clean:
	rm -rf $(OBJ)

fclean: clean
	rm  -f $(NAME)

re: fclean all
